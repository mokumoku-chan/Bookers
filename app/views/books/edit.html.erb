<h1>Editing Book</h1>


<%= form_with model:@book, local: true do |f| %>

  <div class = "field">
    <p>Title</p>
    <%= f.text_field :title %>
  </div>

  <div class = "field">
    <p>Body</p>
    <%= f.text_area :body %>
  </div>

  <div class = "submit">
    <%= f.submit "Update Book" %>
  </div>

  <div class = "link">
    <%= link_to "Show", books_path(@book.id) %>
    |
    <%= link_to "Back", books_path %>
  </div>

<% end %>
