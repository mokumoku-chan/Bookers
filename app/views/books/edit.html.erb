<h1>Editing Book</h1>


<% if @book.errors.any? %>
  <div class = "error">
    <div class = "error-overview">
      <!--エラーが一つの場合-->
      <% if @book.errors.count == 1 %>
        <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
      <!--エラーが二つ以上の場合-->
      <% else %>
        <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
      <% end %>
    </div>

    <ul class = "error-detail">
      <% @book.errors.full_messages.each do |message| %>
        <li class = error-detail-item>
          <p><%= message %></p>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>



<%= form_with model:@book, local: true do |f| %>

  <div class = "input-field">
    <div class = "field"><h4>Title</h4></div>

    <div class = "field"><%= f.text_field :title %></div>


    <div class = "field"><h4>Body</h4></div>
    <div class = "field"><%= f.text_area :body %></div>

    <a><%= f.submit "Create Book" %></a>

  </div>


  <div class = "link">
    <%= link_to "Show", book_path(@book.id) %>
    |
    <%= link_to "Back", books_path %>
  </div>

<% end %>
