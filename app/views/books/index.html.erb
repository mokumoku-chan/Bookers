
<!--一覧画面表示-->
<h1>BOOKs</h1>

  <table class = "table-index">
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan = "3"></th>
    </tr>


<!--一覧表示-->
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    <% end %>
  </table>


  <!--新規投稿画面表示-->

<div class = "new">
  <h2>New book</h2>


<!--エラー時-->

  <% if @book.errors.any? %>
    <div class = "error">
      <div class = "error-overview">
        <!--エラーが一つの場合-->
        <% if @book.errors.count == 1 %>
          <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
        <!--エラーが二つ以上の場合-->
        <% else %>
          <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
        <% end %>
      </div>

      <ul class = "error-detail">
        <% judge = [] %>

        <% @book.errors.full_messages.each do |message| %>
          <li class = error-detail-item>
            <p><%= message %></p>

            <% if message.include?("Title") %>
              <% judge.push("Title") %>

            <% elsif message.include?("Body") %>
              <% judge.push("Body") %>

            <% end %>
          </li>
        <% end %>
      </ul>
    </div>


    <%= form_with model:@book, local: true do |f| %>

      <% if judge.include?("Title") %>
        <div class = "field">
          <div class = "error-field">
            <label for = "book-title"><h4>Title</h4></label>
          </div>

          <div class = "error-field">
            <%= f.text_field :title %>
          </div>
        </div>


        <% else %>
        <div class = "field">
          <div class = "non-error-field">
            <label for = "book-title"><h4>Title</h4></label>
          </div>

          <div class = "non-error-field">
            <%= f.text_field :title %>
          </div>
        </div>

        <% end %>


        <% if judge.include?("Body") %>

        <div class = "field">
          <div class = "error-field">
            <label for = "book-body"><h4>Body</h4></label>
          </div>

          <div class = "error-field">
            <%= f.text_area :body %>
          </div>
        </div>

        <% else %>
        <div class = "field">
          <div class = "non-error-field">
            <label for = "book-body"><h4>Body</h4></label>
          </div>

          <div class = "non-error-field">
            <%= f.text_area :body %>
          </div>
        </div>

        <% end %>

        <div class = "link">
          <a><%= f.submit "Create Book" %></a>
        </div>
      </div>

    <% end %>


<!--エラーがないとき-->

  <% else %>
    <%= form_with model:@book, local: true do |f| %>

      <div class = "field">
        <div class = "non-error-field">
          <label for = "book-title"><h4>Title</h4></label>
        </div>

        <div class = "non-error-field">
          <%= f.text_field :title %>
        </div>
      </div>


      <div class = "field">
        <div class = "non-error-field">
          <label for = "book-body"><h4>Body</h4></label>
        </div>

        <div class = "non-error-field">
          <%= f.text_area :body %>
        </div>
      </div>

      <div class = "link">
        <a><%= f.submit "Create Book" %></a>
      </div>


    <% end %>
  <% end %>
