
<!--一覧画面表示-->
<h1>BOOKs</h1>

  <table class = "table-index">
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan = "3"></th>
    </tr>


    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destory", book_path(book.id), method: :delete, "data-confirm" %></td>
      </tr>
    <% end %>
  </table>


  <!--新規投稿画面表示-->

<div class = "new">
  <h2>New book</h2>



  <% if @book.errors.any? %>
    <div class = "error">
      <div class = "error-overview">
        <!--エラーが一つの場合-->
        <% if @book.errors.count == 1 %>
          <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
        <!--エラーが二つ以上の場合-->
        <% else %>
          <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
        <% end %>
      </div>

      <ul class = "error-detail">
        <% @book.errors.full_messages.each do |message| %>
          <li class = error-detail-item>
            <p><%= message %></p>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>



  <%= form_with model:@book, local: true do |f| %>

    <div class = "field">
      <h4>Title</h4>
      <%= f.text_field :title %>
    </div>


    <div class = "field">

      <h4>Body</h4>
      <%= f.text_area :body %>
    </div>


    <a><%= f.submit "Create Book" %></a>

  <% end %>

</div>
