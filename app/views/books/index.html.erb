<h1>BOOKs</h1>

  <table class = "table-index">
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan = "3"></th>
    </tr>

    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", books_path %></td>
        <td><%= link_to "Edit", books_path %></td>
        <td><%= link_to "Destory", books_path %></td>
      </tr>
    <% end %>
  </table>


