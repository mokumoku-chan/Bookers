
<!--一覧画面表示-->
<h1>BOOKs</h1>

  <table class = "table-index">
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan = "3"></th>
    </tr>


<!--一覧表示-->
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    <% end %>
  </table>


  <!--新規投稿画面表示-->

<div class = "new">
  <h2>New book</h2>


<% if @book.errors.any? %>
  <div class = "error">
    <div class = "error-overview">
      <!--エラーが一つの場合-->
      <% if @book.errors.count == 1 %>
        <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
      <!--エラーが二つ以上の場合-->
      <% else %>
        <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
      <% end %>
    </div>

    <ul class = "error-detail">

      <% @book.errors.full_messages.each do |message| %>
        <li class = error-detail-item>
          <p><%= message %></p>

        </li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_with model:@book, local: true do |f| %>

  <div class = "field">
    <label for "book-title"><h4>Title</h4></label>
    <%= f.text_field :title %>
  </div>

  <div class = "field">
    <label for "book-body"><h4>Body</h4></label>
    <%= f.text_area :body %>
  </div>

  <div class = "link">
    <%= f.submit "Create Book" %>
  </div>

<% end %>

